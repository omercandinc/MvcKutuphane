@model MvcKutuphane.Models.Entity.TBLKATEGORI
@{
    ViewBag.Title = "KategoriGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Kategori Güncelleme Sayfası</h2>
<br />
@using( Html.BeginForm("KategoriGuncelle","Kategori",FormMethod.Post))
{
	<div style="margin-top:15px"></div>
	<div class="form-group">
		@Html.LabelFor(k => k.ID)
		@Html.TextAreaFor(k => k.ID, new { @class = "form-control" })
		<br />
		@Html.LabelFor(k => k.AD)
		@Html.TextAreaFor(k => k.AD, new { @class = "form-control" })
	</div>
	<div>
		<button class="btn btn-warning">Güncelle</button>
	</div>
}

