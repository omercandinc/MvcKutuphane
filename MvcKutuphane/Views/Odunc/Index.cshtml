@using MvcKutuphane.Models.Entity
@model List<TBLHAREKET>
@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/Layout.cshtml";
}

<h2 class="page-header">Ödünç Kitap Listesi</h2>

<table class="table table-bordered">
	<tr>
		<th>ID</th>
		<th>Kitap Adı</th>
		<th>Üye</th>
		<th>Personel</th>
		<th>Alış Tarihi</th>
		<th>İade Tarihi</th>
		<th>Kitabı Iade Al</th>
	</tr>
	@foreach (var x in Model)
	{
		<tr>
			<td>@x.ID</td>
			<td>@x.TBLKITAP.AD</td>
			<td>@x.TBLUYELER.AD &nbsp;@x.TBLUYELER.SOYAD</td>
			<td>@x.TBLPERSONEL.PERSONEL</td>
			<td>@Convert.ToDateTime( x.ALISTARIH).ToString("dd/MM/yyyy")</td>
			<td>@Convert.ToDateTime( x.IADETARIH).ToString("dd/MM/yyyy")</td>
			<td><a href="/Odunc/OduncIade/@x.ID" class="btn btn-default" style="background-color:#ff6a00">Kitabı Iade Et</a></td>
			
		</tr>
	}

</table>
<a href="/Kitap/KitapEkle/" class="btn btn-primary">Yeni Kitap Ekle</a>