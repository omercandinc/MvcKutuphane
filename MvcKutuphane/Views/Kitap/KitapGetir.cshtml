@model MvcKutuphane.Models.Entity.TBLKITAP
@{
	ViewBag.Title = "KitapGetir";
	Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Kitap Güncelleme Sayfası</h2>
<br />
@using (Html.BeginForm("KitapGuncelle", "Kitap", FormMethod.Post))
{
<div class="form-group">
	<div></div>
	<div style="margin-top:15px">
		<label>Kitap ID</label>
		@Html.TextBoxFor(x => x.ID, new { @class = "form-control" })
	</div>
	<div style="margin-top:15px">
		<label>Kitap Adı</label>
		@Html.TextBoxFor(x => x.AD, new { @class = "form-control" })
	</div>
	<div style="margin-top:15px">
		<label>Kategori</label>
		@Html.DropDownListFor(x => x.TBLKATEGORI.ID, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
	</div>
	<div style="margin-top:15px">
		<label>Yazarı</label>
		@Html.DropDownListFor(x => x.TBLYAZAR.ID, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" })
	</div>
	<div style="margin-top:15px">
		<label>Basım Yılı</label>
		@Html.TextAreaFor(x => x.BASIMYIL, new { @class = "form-control" })
	</div>
	<div style="margin-top:15px">
		<label>Yayınevi</label>
		@Html.TextAreaFor(x => x.YAYINEVI, new { @class = "form-control" })
	</div>
	<div style="margin-top:15px">
		<label>Sayfa Sayısı</label>
		@Html.TextAreaFor(x => x.SAYFA, new { @class = "form-control" })
	</div>
	<div style="margin-top:15px">
		<label>Durum</label>
		@Html.TextAreaFor(x => x.DURUM, new { @class = "form-control" })
	</div>
	<div style="margin-top:15px">
		<button class="btn btn-success">Kitap Güncelle</button>
	</div>
	<input type="hidden" name="Durum" value="True" />

</div>
}


