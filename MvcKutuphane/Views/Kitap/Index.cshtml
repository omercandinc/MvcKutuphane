@using MvcKutuphane.Models.Entity
@model List<TBLKITAP>
@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/Layout.cshtml";
}

<h2 class="page-header">Kitap Sayfası</h2>

@using (Html.BeginForm("Index", "Kitap", FormMethod.Get))
{
	<div style="margin-top:15px">
		<b>Aranacak Kitap adını girin: </b> @Html.TextBox("p")
		<input type="submit" value="Ara"/>
	</div>
}



<table class="table table-bordered">
	<tr>
		<th>ID</th>
		<th>Kitap Adı</th>
		<th>Kitap Yazarı</th>
		<th>Kategorisi</th>
		<th>Basım Yılı</th>
		<th>Yayınevi</th>
		<th>Sayfa</th>
		<th>Durum</th>
		<th>Sil</th>
		<th>Güncelle</th>
	</tr>
	@foreach (var x in Model)
	{
		<tr>
			<td>@x.ID</td>
			<td>@x.AD</td>
			<td>@x.TBLYAZAR.AD &nbsp;@x.TBLYAZAR.SOYAD</td>
			<td>@x.TBLKATEGORI.AD</td>
			<td>@x.BASIMYIL</td>
			<td>@x.YAYINEVI</td>
			<td>@x.SAYFA</td>
			<td>@x.DURUM</td>
			<td><a href="/Kitap/KitapSİl/@x.ID" class="btn btn-danger">Sil</a></td>
			<td><a href="/Kitap/KitapGetir/@x.ID" class="btn btn-success">Güncelle</a></td>
		</tr>
	}

</table>
<a href="/Kitap/KitapEkle/" class="btn btn-primary">Yeni Kitap Ekle</a>

