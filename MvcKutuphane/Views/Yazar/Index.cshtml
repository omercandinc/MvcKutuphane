@using MvcKutuphane.Models.Entity
@model List<TBLYAZAR>
@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/Layout.cshtml";
}
<title>Yazarlar</title>
<h2>Yazarlar</h2>

<table class="table table-striped">
	<tr style="background-color:yellow">
		<th>ID</th>
		<th>Adı</th>
		<th>Soyadı</th>
		<th>Detay</th>
		<th>Sil</th>
		<th>Güncelle</th>
	</tr>
	@foreach (var x in Model)
	{
		<tr>
			<td>@x.ID</td>
			<td>@x.AD</td>
			<td>@x.SOYAD</td>
			<td>@x.DETAY</td>
			<td>@Html.ActionLink("Sil","YazarSil",new { id = x.ID },new {@class="btn btn-danger",
			onclick="return confirm('Silmek İsityor musunuz?')"})</td>
			<td><a href="/Yazar/YazarGetir/@x.ID" class="btn btn-success">Güncelle</a></td>
		</tr>
	}

</table>
<a href="/Yazar/YazarEkle/" class="btn btn-primary">Yeni Yazar Ekle</a>
