@using MvcKutuphane.Models.Entity
@model List<TBLYAZAR>
@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Yazarlar</h2>

<table class="table table-bordered">
	<tr>
		<th>ID</th>
		<th>Adı</th>
		<th>Soyadı</th>
		<th>Detay</th>
		<th>Sil</th>
		<th>Güncelle</th>
	</tr>
	@foreach (var x in Model)
	{
		<tr>
			<td>@x.ID</td>
			<td>@x.AD</td>
			<td>@x.SOYAD</td>
			<td>@x.DETAY</td>
			<td><a href="/Yazar/YazarSil/@x.ID" class="btn btn-danger">Sil</a></td>
			<td><a href="/Yazar/YazarGetir/@x.ID" class="btn btn-success">Güncelle</a></td>
		</tr>
	}

</table>
<a href="/Yazar/YazarEkle/" class="btn btn-primary">Yeni Yazar Ekle</a>
