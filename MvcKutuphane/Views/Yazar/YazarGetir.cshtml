@model MvcKutuphane.Models.Entity.TBLYAZAR
@{
	ViewBag.Title = "YazarGetir";
	Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Yazar Güncelleme Sayfası</h2>
<br />
@using (Html.BeginForm("YazarGuncelle", "Yazar", FormMethod.Post))
{
	<div style="margin-top:15px"></div>
	<div class="form-group">
		@Html.LabelFor(k => k.ID)
		@Html.TextAreaFor(k => k.ID, new { @class = "form-control" })
		<br />
		@Html.LabelFor(k => k.AD)
		@Html.TextAreaFor(k => k.AD, new { @class = "form-control" })
		<br />
		@Html.LabelFor(k => k.SOYAD)
		@Html.TextAreaFor(k => k.SOYAD, new { @class = "form-control" })
		<br />
		@Html.LabelFor(k => k.DETAY)
		@Html.TextAreaFor(k => k.DETAY, new { @class = "form-control" })
	</div>
	<div>
		<button class="btn btn-warning">Yazar Bilgilerini Güncelle</button>
	</div>
}